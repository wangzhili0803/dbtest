<resources>

    <!-- home tab-->
    <style name="tab_bar_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/four_dp</item>
        <item name="android:textSize">@dimen/_10sp</item>
        <item name="android:textColor">@drawable/main_tab_text</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="menu_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/page_margin</item>
        <item name="android:paddingTop">@dimen/eight_dp</item>
        <item name="android:paddingBottom">@dimen/eight_dp</item>
        <item name="android:paddingRight">@dimen/page_margin</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="style_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_45dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/white_bg_selector</item>
        <item name="android:textColor">@color/second_text_color</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:drawablePadding">@dimen/four_dp</item>
    </style>

    <!-- 右边箭头 -->
    <style name="arrow_style" parent="style_item">
        <item name="android:paddingStart">@dimen/page_margin</item>
        <item name="android:paddingEnd">@dimen/page_margin</item>
        <item name="android:drawableRight">@drawable/arrow</item>
        <item name="android:drawableEnd">@drawable/arrow</item>
    </style>

