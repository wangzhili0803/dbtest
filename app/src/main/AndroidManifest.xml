<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vince.dbtest">

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".FYApplication"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.tencent.bugly.beta.ui.BetaActivity"
            android:theme="@android:style/Theme.Translucent" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.vince.dbtest.fileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths"/>
        </provider>

        <activity
            android:name=".Activities.AsyncTaskLoaderActivity"
            android:label="@string/app_name" />

        <provider
            android:name=".provider.HelloProvider"
            android:authorities="com.vince.dbtest.provider.HelloProvider" />

        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/title_activity_loader" />
        <activity
            android:name=".Activities.LoaderActivity"
            android:label="@string/title_activity_async_task_loader" />
        <activity
            android:name=".Activities.RequestActivity"
            android:label="@string/title_activity_request" />
        <activity
            android:name=".Activities.AsyncActivity"
            android:label="@string/title_activity_async" />
        <activity
            android:name=".Activities.SoapActivity"
            android:label="@string/title_activity_soap" />
        <activity
            android:name=".Activities.WebActivity"
            android:label="@string/title_activity_web" />
        <activity
            android:name=".Activities.AnniActivity"
            android:label="@string/title_activity_anni" />
        <activity
            android:name=".Activities.MenuActivity"
            android:label="@string/title_activity_menu"></activity>
        <activity
            android:name=".Activities.SurfaceViewActivity"
            android:label="@string/title_activity_surface_view"></activity>
        <activity
            android:name=".Activities.BitmapActivity"
            android:label="@string/title_activity_bitmap">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
